<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>

        <item name="colorAccent">@color/navigator</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:icon">@color/icons</item>
        <item name="android:divider">@color/divider</item>
        <item name="android:colorBackground">@color/background_default</item>

        <item name="android:colorButtonNormal">@color/primary</item>
        <item name="windowActionModeOverlay">true</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


    <style name="mAlert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>

    </style>


    <style name="mCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/secondary_text</item>
        <item name="colorControlActivated">@color/persian_green_approx</item>
    </style>
    <style name="mCheckBoxBlue" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/secondary_text</item>
        <item name="colorControlActivated">@color/navigator</item>
    </style>
    <style name="mCheckBoxWhite" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/icons</item>
        <item name="colorControlActivated">@color/icons</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <!--<item name="colorControlActivated">#46bdbf</item>-->

        <!-- inactive thumb color -->
        <!--<item name="colorSwitchThumbNormal">#f1f1f1-->
        <!--</item>-->

        <!-- inactive track color (30% transparency) -->
        <!--<item name="android:colorForeground">#42221f1f-->
        <!--</item>-->

        <item name="colorControlNormal">@color/navigator</item>
        <item name="colorControlActivated">@color/navigator</item>
        <item name="colorControlHighlight">@color/navigator</item>
        <item name="colorSwitchThumbNormal">@color/navigator</item>
    </style>
</resources>
