<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>

        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:icon">@color/icons</item>
        <item name="android:divider">@color/divider</item>
        <item name="android:colorBackground">@color/background_default</item>

        <item name="colorButtonNormal">@color/primary</item>
        <item name="windowActionModeOverlay">true</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>


    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Correção para os CheckBox que não aceitavam o buttonTint em < v21 -->
    <style name="mCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/secondary_text</item>
        <item name="colorControlActivated">@color/persian_green_approx</item>
    </style>

    <style name="mCheckBoxWhite" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/icons</item>
        <item name="colorControlActivated">@color/icons</item>
    </style>
    <!-- Correção para os CheckBox que não aceitavam o buttonTint em < v21 -->
    <style name="mCheckBoxDialog" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/secondary_text</item>
        <item name="colorControlActivated">@color/primary</item>
    </style>

    <!-- Layouts com Dupla propriedade no background-->
    <style name="mLayout" parent="Theme.AppCompat.Light">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="mAlert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/accent</item>
        <!-- Used for the title and txtNomeHotel -->
        <item name="android:textColorPrimary">@color/primary_text</item>

    </style>

    <style name="mShadow">
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
