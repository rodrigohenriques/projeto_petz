<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layHome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark_alpha"
    tools:context="br.com.projeto.pets.activity.HomeActivity">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/imgBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.40"
        android:scaleType="fitXY" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="105dp"
        android:onClick="teste"
        android:gravity="center_horizontal"
        android:text="Projeto Pet"
        android:textColor="@color/icons"
        android:textSize="48sp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="60dp"
        android:text="Adoção e venda de animais de estimação, com muito amor."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/icons" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView"
        android:layout_marginBottom="59dp"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnRegister"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:backgroundTint="@color/accent_alpha"
            android:text="cadastro"
            android:textColor="@color/icons"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnLogin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:backgroundTint="@color/accent_alpha"
            android:text="log in"
            android:textColor="@color/icons"/>

    </LinearLayout>


</RelativeLayout>
